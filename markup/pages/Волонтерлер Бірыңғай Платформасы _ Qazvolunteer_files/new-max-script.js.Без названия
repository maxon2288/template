$(document).ready(function() {
  var i = 0;
  $(".filter-select-img option").each(function() {
      i++;
      var it = $(this);
      var img = it.attr("data-img");
      console.log(img);
      if (img) {
        // console.log(img);
        var text = it.text();
        $(".filter-select-img .option:nth-child("+i+")").empty();
        $(".filter-select-img .option:nth-child("+i+")").append(`
            <img src="${img}"> ${text}
        `);       
      }         
  });
  $(document).on("click", ".filter-select-img .option", function() {
      var src = $(this).find("img").attr("src");
      var text2 = $(this).text();
      var resultTag = "";

      if (src) {
        resultTag += `<img src="${src}">`;
      }
      resultTag += text2;

      $(".filter-select-img .current").empty();
      $(".filter-select-img .current ").append(resultTag);
  });       


  $(document).on("click",".top-button", function (event) {
        event.preventDefault();
        var id  = $(this).attr('href'),
            top = $(id).offset().top;
        $('body,html').animate({scrollTop: top}, 1500);
    });
  $(document).scroll(function() {
      if ($(document).scrollTop() >= 1000) {
          $(".top-button").addClass("active");
          
      } else {
        $(".top-button").removeClass("active");
      }
  })

  $(".tabs__container").each(function() {
      $('.tab__tab').click(function(e) {
          e.preventDefault();
          var it = $(this);
          var href = it.attr("href");
          it.closest(".tabs__tabs").find(".tab__tab").removeClass("active");
          it.addClass("active");
          $(".tabs__block").removeClass("active");
          $("." + href).addClass("active");
      });
  });
});
